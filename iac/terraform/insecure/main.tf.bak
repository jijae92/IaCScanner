provider "aws" {
  region = "us-east-1"
}

resource "aws_s3_bucket" "public_bucket" {
  bucket = "iac-scanner-demo-public"
  acl    = "public-read"
}

resource "aws_security_group" "open_sg" {
  name        = "iac-scanner-open"
  description = "Open security group for demo"

  ingress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
